{
  "app": "npx ts-node --prefer-ts-exts bin/camunda-infra.ts",
  "context": {
    "@aws-cdk/aws-apigateway:usagePlanKeyOrderInsensitiveId": true,
    "@aws-cdk/core:enableStackNameDuplicates": "true",
    "aws-cdk:enableDiffNoFail": "true",
    "@aws-cdk/core:stackRelativeExports": "true",
    "@aws-cdk/aws-ecr-assets:dockerIgnoreSupport": true,
    "@aws-cdk/aws-secretsmanager:parseOwnedSecretName": true,
    "@aws-cdk/aws-kms:defaultKeyPolicies": true,
    "@aws-cdk/aws-s3:grantWriteWithoutAcl": true,
    "@aws-cdk/aws-ecs-patterns:removeDefaultDesiredCount": true,
    "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
    "@aws-cdk/aws-efs:defaultEncryptionAtRest": true,

    "dev": {
      "AWSProfileRegion" : "us-east-1",

      "Project": "carpathia",
      "App": "camunda",
      "Environment": "dev",

      "Cidr": "10.11.0.0/16",
      "enableDnsSupport": "true",
      "natGateways": "1",
      "enableDnsHostnames": "true",
      "maxAzs": "2",

      "allowAllOutboundSGAccess": "true",
      "allowAllOutboundSG": "true",

      "fargateMemoryLimitMiB": "512",
      "fargateCpu": "256",

      "fargateImage": "camunda/camunda-bpm-platform",
      "fargateContainerPort": "8080",

      "allowAllOutboundAlbSG": "true",
      "ingressPortAlbSG": "80",

      "allowAllOutboundServiceSG": "true",
      "ingressPortServiceSG": "8080",

      "desiredCountservice": "1",

      "internetFacinglb": "true",

      "portListener": "80",

      "portTargetGroup": "8080",

      "pathHealthCheck": "/",
      "intervalHealthCheck": "1",
      "healthyThresholdCount": "7",
      "unhealthyThresholdCount": "7",
      "healthyHttpCodes": "200-399",

      "targetUtilizationPercent": "50",

      "DatabaseInstanceEngineFullVersion": "12.5",
      "DatabaseInstanceEngineMajorVersion": "12",
      "DbInstClass": "t3",
      "DbInstType": "small",
      "DbName": "processengine",
      "DbUser": "camunda"
    },
    "prod": {
      "AWSProfileRegion" : "us-east-2",

      "Project": "carpathia",
      "App": "camunda",
      "Environment": "prod",

      "Cidr": "10.11.0.0/16",
      "enableDnsSupport": "true",
      "natGateways": "1",
      "enableDnsHostnames": "true",
      "maxAzs": "2",

      "allowAllOutboundSGAccess": "true",
      "allowAllOutboundSG": "true",

      "fargateMemoryLimitMiB": "512",
      "fargateCpu": "256",

      "fargateImage": "camunda/camunda-bpm-platform",
      "fargateContainerPort": "8080",

      "allowAllOutboundAlbSG": "true",
      "ingressPortAlbSG": "80",

      "allowAllOutboundServiceSG": "true",
      "ingressPortServiceSG": "8080",

      "desiredCountservice": "1",

      "internetFacinglb": "true",

      "portListener": "80",

      "portTargetGroup": "8080",

      "pathHealthCheck": "/",
      "intervalHealthCheck": "1",
      "healthyThresholdCount": "7",
      "unhealthyThresholdCount": "7",
      "healthyHttpCodes": "200-399",

      "targetUtilizationPercent": "50",

      "DatabaseInstanceEngineFullVersion": "12.5",
      "DatabaseInstanceEngineMajorVersion": "12",
      "DbInstClass": "t3",
      "DbInstType": "small",
      "DbName": "camunda_db",
      "DbUser": "camunda"
    }
  }
}
